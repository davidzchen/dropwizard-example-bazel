SONATYPE_NEXUS_REPOSITORY = "http://oss.sonatype.org/content/repositories/snapshots"

DROPWIZARD_VERSION = "0.8.1-SNAPSHOT"

maven_jar(
    name = "dropwizard-core",
    group_id = "io.dropwizard",
    artifact_id = "dropwizard-core",
    version = DROPWIZARD_VERSION,
    repositories = [SONATYPE_NEXUS_REPOSITORY],
)

bind(
    name = "dropwizard-core-jar",
    actual = "@dropwizard-core//jar",
)

